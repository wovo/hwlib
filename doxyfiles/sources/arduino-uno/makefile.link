# common settings for Arduino Uno projects
TARGET            ?= arduino_uno
SERIAL_PORT       ?= COM4
CONSOLE_BAUDRATE  ?= 2400

ifneq ($(OS),Windows_NT)
   SERIAL_BAUDRATE ?= ttyUSB0
endif

# defer to the next-level makefile
RELATIVE          ?= .
RELATIVE          := $(RELATIVE)/..
include           $(RELATIVE)/makefile.link
